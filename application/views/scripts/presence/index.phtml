<?php
$buttons = array(
	'<a class="button-bc" href="%url%">'.$this->translate()->trans('Global.add-new').'</a>' => array('action' => 'new')
);
if ($this->rows) {
	$buttons['<a class="button-bc" href="%url%">'.$this->translate()->trans('Global.download-csv').'</a>'] = array('action' => 'download');
}
$buttons = $this->gatekeeper()->filterAll($buttons);
if ($this->rows) {
	array_unshift($buttons, '<span id="filter-presence-type"></span>');
	array_unshift($buttons, '<span id="filter-region"></span>');
	array_unshift($buttons, '<div id="search-table">'.$this->translate()->trans('Global.loading-data').'</div>');
}
?>

<h2 class="page-title"><?php echo $this->pageTitle; ?></h2>

<?php if (!$this->rows) : ?>
	<h3 class="empty-table"><?php echo $this->translate()->trans('Presence.index.table-empty'); ?></h3>
	<?php echo $this->partial('partials/button-bar.phtml', array('buttons' => $buttons, 'dark' => true)); ?>
<?php else :
	echo $this->partial('partials/button-bar.phtml', array('buttons' => $buttons, 'dark' => true));

	echo $this->partial("partials/new-index-table.phtml", array(
		"tableHeaders" => $this->tableHeaders,
		"tableId" => "all-presences",
		"rows" => $this->rows,
		'sortCol' => $this->sortCol
	));
endif;