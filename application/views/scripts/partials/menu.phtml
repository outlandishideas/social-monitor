<ul class="navigation">

    <?php

    /** @var Zend_Navigation_Page_Mvc $page */
    foreach ($this->container as $page) :

        $href = $page->getHref();

        if($href == true) : ?>

            <?php
            $class = '';
            if($page->action != 'login'){
                $test = $this->gatekeeper()->filter('%url%', array('controller' => $page->controller, 'action' => $page->action));
                $href = $test ? $test : '#';
                $class = $test ? 'disabled' : '';
            }
            ?>

            <li class="<?php echo $class; if ($page->active) echo 'active'; ?>">
                <a href="<?php echo $href; ?>">

                    <?php
                        $icon = $page->icon;
                        if($icon) echo '<span class="'.$icon.'"></span>  ';
                        echo $page->getLabel();
                    ?>

                </a>
            </li>

        <?php endif;

    endforeach; ?>

</ul>