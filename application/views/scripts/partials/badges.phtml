<?php
/** @var \Symfony\Bundle\FrameworkBundle\Translation\Translator $translator */
$translator = $this->translate();

$locale = 'en_US';
$nf = new NumberFormatter($locale, NumberFormatter::ORDINAL);

function metricAttributes($metric, $translator) {
    /** @var \Symfony\Bundle\FrameworkBundle\Translation\Translator $translator */

    $attrs = array();
    $title = $metric['title'];
    if (array_key_exists('score', $metric)) {
        $score = $metric['score'];
        $attrs['style'] = "color: " . $metric['color'];
        if ($score > 0) {
            $score = round($score*10)/10; // use 1 decimal place maximum
            $attrs['title'] = $translator->trans('views.scripts.partials.badges.metric-attributes.score-title', ['%score%'=>$score, '%title%'=>$title]);
        } else {
            if ($metric['gliding'] || $score === null) {
                $attrs['title'] = $translator->trans('views.scripts.partials.badges.metric-attributes.no-data', ['%title%', $title]);
            } else {
                $attrs['title'] = $translator->trans("views.scripts.partials.badges.metric-attributes.score-zero", ['%title%', $title]);
            }
        }
    } else {
        $attrs['title'] = $translator->trans("views.scripts.partials.badges.metric-attributes.title-not-applicable", ['%title%', $title]);
    }

    $attrStrings = [];
    foreach ($attrs as $key=>$value) {
        $attrStrings[] = $key . '="' . $value . '"';
    }

    return implode(' ', $attrStrings);
}
