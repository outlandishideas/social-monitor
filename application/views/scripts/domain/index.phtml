<form method="post" action="<?php echo $this->url(); ?>" class="uniForm">
	<table class="text dtable standard hoverable">
		<thead>
			<tr>
				<th data-sort="auto">Domain</th>
				<th data-sort="numeric">Links</th>
				<th data-sort="checkbox">British Council</th>
			</tr>
		</thead>
		<tbody>
			<?php /** @var $domain Model_Domain */ ?>
			<?php foreach ($this->domains as $domain) : ?>
			<tr>
				<td>
					<?php $url = $this->gatekeeper()->filter('%url%', array('action'=>'view', 'id'=>$domain->id)); ?>
					<?php if ($url) : ?><a href="<?php echo $url; ?>"><?php endif; ?>
					<?php echo $domain->domain; ?>
					<?php if ($url) : ?></a><?php endif; ?>
				</td>
				<td><?php echo $domain->getLinkCount(); ?></td>
				<td><input id="domain-<?php echo $domain->id; ?>" type="checkbox" <?php if ($domain->is_bc) { echo 'checked'; } ?>
