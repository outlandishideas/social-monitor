<?php
$buttons = array(
	'<a class="button-bc" href="%url%">Add New</a>' => array('action'=>'new'),
);
if ($this->rows) {
	$buttons['<a class="button-bc" href="%url%">Edit All</a>'] = array('action'=>'edit-all');
	$buttons['<a class="button-bc" href="%url%">Download CSV</a>'] = array('action' => 'download');
}
$buttons = $this->gatekeeper()->filterAll($buttons);
if ($this->rows) {
	array_unshift($buttons, '<div id="search-table">Loading data...</div>');
}

echo '<h2 class="page-title">Regions</h2>';

echo $this->partial('partials/button-bar.phtml', array('buttons'=>$buttons, 'dark'=>true));

echo $this->partial("partials/new-index-table.phtml", array(
    "tableHeaders" => $this->tableHeaders,
    "tableId" => "all-regions",
    "rows" => $this->rows,
    'emptyText' => 'No regions found',
    'sortCol' => $this->sortCol
));
